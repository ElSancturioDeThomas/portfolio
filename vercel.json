{
  "version": 2,
  "buildCommand": "cd portfolio && pip install -r requirements.txt && python manage.py collectstatic --noinput || true",
  "builds": [
    {
      "src": "portfolio/api/vercel.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "15mb",
        "runtime": "python3.11"
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "portfolio/api/vercel.py"
    }
  ]
}
